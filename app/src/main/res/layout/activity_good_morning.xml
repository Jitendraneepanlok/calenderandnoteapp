<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            >
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:padding="@dimen/_10sdp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wishMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/morning_text"
            android:textColor="@color/text_color_titles"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_30sdp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color_titles"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_30sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color_titles"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_30sdp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/pendingApproval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/pending_approval"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/hurrahTxt"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/huraah_you_are_approvad"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/otpLayout"
        android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/validatMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
           android:visibility="gone"
            android:text="@string/validate_note"
            android:textColor="@color/text_color_titles"
            android:textSize="@dimen/_15sdp" />
        <Button
            android:visibility="gone"
            android:id="@+id/genrateOtp"
            style="@style/btn_main_1"
            android:text="@string/validate_number"
            android:layout_margin="@dimen/_30sdp"/>
    </LinearLayout>






</LinearLayout>
</layout>